###############################################################
# Records for setting width and horizontal centre
###############################################################

record(longout, "$(CAM):ROI_CX") {
  field(DESC, "X centre of the ROI")
  field(FLNK, "$(CAM):ROI_CX_WRITE.PROC")
}

record(longout, "$(CAM):ROI_CX_WRITE") {
  field(FLNK, "$(CAM):ROI_X_SET.PROC")
  field(SDIS, "$(CAM):ROI_CX_SYNC.PACT")
  field(DISV, "1")
}

record(calc, "$(CAM):ROI_CX_RBV") {
  field(INPA, "$(CAM):ROI1:MinX_RBV CP")
  field(INPB, "$(CAM):ROI1:SizeX_RBV CP")
  field(CALC, "FLOOR(A+0.5*B)")
  field(FLNK, "$(CAM):ROI_CX_SYNC.PROC")
}

record(longout, "$(CAM):ROI_CX_SYNC") {
  field(DESC, "Keep ROI_CX in sync with real val")
  field(OUT, "$(CAM):ROI_CX PP")
  field(DOL, "$(CAM):ROI_CX_RBV NPP")
  field(OMSL, "closed_loop")
}

record(longout, "$(CAM):ROI_W") {
  field(DESC, "Desired width of ROI")
  field(FLNK, "$(CAM):ROI_W_WRITE.PROC")
}

record(longout, "$(CAM):ROI_W_WRITE") {
  field(FLNK, "$(CAM):ROI_X_SET.PROC")
  field(SDIS, "$(CAM):ROI_W_SYNC.PACT")
  field(DISV, "1")
}

record(longin, "$(CAM):ROI_W_RBV") {
  field(INP, "$(CAM):ROI1:SizeX_RBV CP")
  field(FLNK, "$(CAM):ROI_W_SYNC.PROC")
}

record(longout, "$(CAM):ROI_W_SYNC") {
  field(DESC, "Keep ROI_W in sync with real val")
  field(OUT, "$(CAM):ROI_W PP")
  field(DOL, "$(CAM):ROI_W_RBV NPP")
  field(OMSL, "closed_loop")
}


record(calc, "$(CAM):ROI_WIDTH_CALC") {
  field(DESC, "Given cx and w, calculate width")
  field(INPA, "$(CAM):ROI_CX")
  field(INPB, "$(CAM):ROI_W")
  field(INPC, "$(CAM):MaxSizeX_RBV")
  field(CALC, "MIN(MIN(A,C-A)*2,B)")
}

record(calc, "$(CAM):MIN_X") {
  field(DESC, "Given cx and width, calc ROIminX")
  field(INPA, "$(CAM):ROI_CX")
  field(INPB, "$(CAM):ROI_WIDTH_CALC PP")
  field(CALC, "FLOOR(A-0.5*B)")
}

record(seq, "$(CAM):ROI_X_SET") {
  field(DESC, "Set MinX and SizeX for ROI")
  field(DOL1, "1")
  field(LNK1, "$(CAM):LINK_ROI_SIZE.PROC")
  field(DOL2, "$(CAM):MIN_X PP")
  field(LNK2, "$(CAM):ROI1:MinX PP")
  field(DOL3, "$(CAM):ROI_WIDTH_CALC NPP")
  field(LNK3, "$(CAM):ROI1:SizeX")
  field(DOL4, "1")
  field(LNK4, "$(CAM):OVER_X_CALC.PROC")
}



record(seq, "$(P)$(CAM):SET_FULL_CHIP") {
  field(DESC, "Set FOV to full chip")
  field(DOL1, "0")
  field(LNK1, "$(P)$(CAM):LINK_ROI_SIZE PP")
  field(DOL2, "0")
  field(LNK2, "$(P)$(CAM):ROI1:MinX PP")
  field(DOL3, "$(P)$(CAM):MaxSizeX_RBV")
  field(LNK3, "$(P)$(CAM):ROI1:SizeX PP")
  field(DOL4, "0")
  field(LNK4, "$(P)$(CAM):ROI1:MinY PP")
  field(DOL5, "$(P)$(CAM):MaxSizeY_RBV PP")
  field(LNK5, "$(P)$(CAM):ROI1:SizeY PP")
  field(DOL6, "1")
  field(LNK6, "$(P)$(CAM):OVER_X_CALC.PROC")
  field(DOL7, "1")
  field(LNK7, "$(P)$(CAM):OVER_Y_CALC.PROC")  
}

record(fanout, "$(P)$(CAM):SET_ROI_VIEW") {
  field(DESC, "Set ROI to desired value")
  field(LNK1, "$(P)$(CAM):ROI_X.PROC")
  field(LNK2, "$(P)$(CAM):ROI_W.PROC")
  field(LNK3, "$(P)$(CAM):ROI_Y.PROC")
  field(LNK4, "$(P)$(CAM):ROI_H.PROC")
}


# Automatically switch to ROI view when in shot mode
record(calcout, "$(P)$(CAM):SET_ROI_FOR_SHOT"){
  field(DESC, "Move to ROI view in shot mode")
  field(INPA, "$(P)POWER_MODE CP")
  field(CALC, "A=6") # Full power mode
  field(OOPT, "3") # Only write when calc result is non-zero (i.e. true)
  field(OUT, "$(P)$(CAM):SET_ROI_VIEW.PROC")
}



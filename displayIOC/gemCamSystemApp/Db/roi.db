###############################################################
# Records for setting ROI when height and width linked
###############################################################

record(calc, "$(P)$(CAM):ROI_SIZE_CALC") {
    field(DESC, "Find the min of width and length")
    field(CALC, "MIN(A,B)")
    field(INPA, "$(P)$(CAM):ROI_H PP")
    field(INPB, "$(P)$(CAM):ROI_W PP")
}

record(seq, "$(P)$(CAM):LINK_ROI_SIZE") {
    field(DESC, "Set ROI linked height and width")
    field(DOL1, "$(P)$(CAM):ROI_W PP")
    field(LNK1, "$(P)$(CAM):ROI_H PP")
    field(DOL2, "$(P)$(CAM):ROI_SIZE_CALC PP")
    field(LNK2, "$(P)$(CAM):ROI_W PP")
    field(DOL3, "$(P)$(CAM):ROI_SIZE_CALC")
    field(LNK3, "$(P)$(CAM):ROI_H PP")
    field(DOL4, "1")
    field(LNK4, "$(P)$(CAM):ROI_Y_SET.PROC")
    field(SDIS, "$(P)$(CAM):ROI_LINK")
    field(DISV, "0")
}
    
record(bo, "$(P)$(CAM):ROI_LINK") {
    field(DESC, "Width and height of ROI linked")
    field(VAL,  "0")
    field(ZNAM, "unlinked")    
    field(ONAM, "linked")     
}


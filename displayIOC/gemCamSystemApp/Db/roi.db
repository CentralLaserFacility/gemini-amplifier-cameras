record(calcout, "$(P)$(CAM):OVER_X_CALC") {
    field(DESC, "Calc X overlay position")
    field(CALC, "a-b")
    field(INPA, "$(P)$(CAM):OVER_X")
    field(INPB, "$(P)$(CAM):ROI1:MinX CP")
    field(OUT,  "$(P)$(CAM):Over1:1:CenterX CP")
}

record(calcout, "$(P)$(CAM):OVER_Y_CALC") {
    field(DESC, "Calc Y overlay position")
    field(CALC, "a-b") 
    field(INPA, "$(P)$(CAM):OVER_Y")
    field(INPB, "$(P)$(CAM):ROI1:MinY CP") 
    field(OUT,  "$(P)$(CAM):Over1:1:CenterY CP")
   }

record(longin, "$(P)$(CAM):OVER_Y") {
